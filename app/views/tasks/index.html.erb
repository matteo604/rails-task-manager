<h1 class="text-center my-4">My Tasks</h1>

<div class="container">
  <div class="list-group mb-4">
    <% @tasks.each do |task| %>
      <div class="list-group-item">
        <%= link_to task.title, task_path(task), class: 'list-group-item-action' %>
      </div>
    <% end %>
  </div>

  <div class="text-center mb-4">
    <%= link_to "Create a new task", new_task_path, class: 'btn btn-primary' %>
  </div>
