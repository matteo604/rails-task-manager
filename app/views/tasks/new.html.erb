<h1 class="text-center my-4">Create a New Task</h1>

<div class="container">
  <%= form_for @task do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Enter task title' %>
    </div>
    <div class="mb-3">
      <%= f.label :details, class: 'form-label' %>
      <%= f.text_area :details, class: 'form-control', placeholder: 'Enter task details' %>
    </div>
    <div class="text-center">
      <%= f.submit "Create Task", class: 'btn btn-success' %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Back to Task List", tasks_path, class: 'btn btn-secondary' %>
  </div>
</div>
